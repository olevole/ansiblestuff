# split $1 ( IP:PORT ) to:
# _interface="iface"
# _port=port
get_bind_info()
{
	local _ip
	_ip="${1%%:*}"
	_port="${1##*:}"

	case "${_ip}" in
		'*')
			_interface="все"
			;;
		*)
			for i in $( ifconfig -l ); do
				_tst=$( ifconfig ${i} |grep "inet ${_ip}" )
				[ $? -eq 0 ] && _interface="${i}" && break
			done
			;;
	esac
}

